<div class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= image_tag asset_path 'logo.png', alt:"Meu Casamento", class:"img-responsive" %>
      <% end %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', root_path %></li>
        <li>
          <%- current_about_path = request.path == "/" ? '#about' : "#{root_path}#about" %>
          <%= link_to 'Sobre nós', current_about_path %>
        </li>
        <li>
          <%= link_to 'Lista de Presentes', wedding_supports_path %>
        </li>

        <%- current_story_path = request.path == "/" ? '#story' : "#{root_path}#story" %>
        <li><%= link_to 'Nossa história', current_story_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Pessoas <b class="caret"></b></a>
          <%- current_people_path = request.path == "/" ? '#people' : "#{root_path}#people" %>
          <%- current_parents_path = request.path == "/" ? '#parents' : "#{root_path}#parents" %>
          <%- current_witnesses_path = request.path == "/" ? '#witnesses' : "#{root_path}#witnesses" %>
          <ul class="dropdown-menu">
            <li><%= link_to 'Mais Importantes', current_people_path %></li>
            <li><%= link_to 'Pais', current_parents_path %></li>
            <li><%= link_to 'Testemunhas', current_witnesses_path %></li>
          </ul>
        </li>

        <li>
          <%= link_to 'Blog', wedding_blog_index_path %>
        </li>

        <%- current_gallery_path = request.path == "/" ? '#gallery' : "#{root_path}#gallery" %>
        <% if @current_event.gallery.assets.any? %>
          <li><%= link_to 'Galeria', current_gallery_path, id: 'gallery-nav-link' %></li>
        <% end %>
        <%- current_localization_path = request.path == "/" ? '#localizacao' : "#{root_path}#localizacao" %>
        <li><%= link_to 'Localização', current_localization_path %></li>
      </ul>
    </div>
  </div>
</div>
