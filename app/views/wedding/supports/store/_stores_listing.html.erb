<% stores = @stores || @current_event.wedding_support.wedding_list.stores %>
<% current_store = @current_store || stores.first %>

<% if stores.any? %>
<div class="row context-block">
  <div class="col-sm-6" data-scroll-reveal="enter from the left">
    <div class="text-center">
      <h4>Lojas</h4>
    </div>
    <div class="row stores">
      <% stores.each do |store| %>
        <div class="store <%= current_store == store ? 'active' : '' %>">
          <%= link_to show_products_wedding_supports_path(store_id: store, format: :js), remote: true, method: :post do %>
            <div class="col-sm-6">
              <%= image_tag attachment_path(store.attachment, :smaller), class: "img-responsive", alt: "#{store.name}" %>
            </div>
            <div class="col-sm-6">
              <h5><%= store.name %></h5>
              Endere√ßo: <%= store.address %>
            </div>
          <% end %>
        </div>
        <div class="clear"></div>
      <% end %>
    </div>
  </div>

  <div class="col-sm-6" data-scroll-reveal="enter from the right">
    <div id="store-products">
      <%= render partial: 'wedding/supports/store/products', locals: { current_store: current_store } %>
    </div>
  </div>
</div>
<% else %>
<h3>Nenhuma loja adicionada.</h3>
<% end %>
