<section id="gallery">
  <div class="container text-center">
    <div class="row">
      <div class="col-sm-12 heading" data-scroll-reveal>
        <h2>Galeria de Imagens</h2>
        <p><span></span><i class="fa fa-heart"></i><span></span></p>
      </div>
    </div>
    <div class="row" data-scroll-reveal>
      <ul class="gallery">
        <% @current_event.gallery.assets.each do |asset| %>
          <li class="col-xs-4 col-sm-3 col-md-2">
            <%= link_to asset.attachment.url, class: "fancybox hover-effect", data: { 'fancybox-group':"group" } do %>
              <%= image_tag attachment_path(asset.attachment, :smaller), class: 'img-rounded img-responsive', alt: "" %>
              <span class="img-rounded">
                <i class="fa fa-search fa-3x"></i>
              </span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
