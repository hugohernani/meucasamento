<section id="about">
  <div class="container text-center">
    <div class="row">
      <div class="col-sm-12 heading" data-scroll-reveal>
        <h2>Sobre n√≥s</h2>
        <p><span></span><i class="fa fa-heart"></i><span></span></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6" data-scroll-reveal="enter from the left">
        <div class="hover-effect">
          <%= image_tag( attachment_path(@current_event.groom.about_us.asset.attachment, :medium), alt: 'Groom Profile Image') %>
          <span class="img-rounded">
            <i class="fa fa-heart fa-4x"></i>
          </span>
        </div>
        <h5><%= @current_event.groom.social_name %></h5>
        <% if @current_event.groom.about_us.content.present? %>
        <p><%= @current_event.groom.about_us.content %></p>
        <% end %>
        <ul class="social-icons">
          <li>
            <%= link_to 'https://www.facebook.com/Hernnani', target: '_blank' do %>
              <i class="fa fa-facebook"></i>
            <% end %>
          </li>
          <li>
            <%= link_to 'https://twitter.com/hhernanni', target: '_blank' do %>
              <i class="fa fa-twitter"></i>
            <% end %>
          </li>
        </ul>
        <div class="mobile-divider"><span></span><i class="fa fa-heart"></i><span></span></div>
      </div>
      <div class="col-sm-6" data-scroll-reveal="enter from the right after 0.5s">
        <div class="hover-effect">
          <%= image_tag( attachment_path(@current_event.bride.about_us.asset.attachment, :medium), class: "img-responsive", alt: 'Bride Profile Image') %>
          <span class="img-rounded">
            <i class="fa fa-heart fa-4x"></i>
          </span>
        </div>
        <h5><%= @current_event.bride.social_name %></h5>
        <% if @current_event.bride.about_us.content.present? %>
        <p><%= @current_event.bride.about_us.content %></p>
        <% end %>
        <ul class="social-icons">
          <li>
            <%= link_to 'https://www.facebook.com/natalylua', target: '_blank' do %>
              <i class="fa fa-facebook"></i>
            <% end %>
          </li>
          <li>
            <%= link_to 'https://twitter.com/natalyluana', target: '_blank' do %>
              <i class="fa fa-twitter"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
